<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".model.AddUserActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="w,2:3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/speed_meter"
        tools:layout_editor_absoluteY="461dp" />

    <TextView
        android:id="@+id/Add_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD RECORD"
        android:textColor="#FFFEFE"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/meter_edit_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/meter_edit_text"
        android:layout_width="210dp"
        android:layout_height="33dp"
        android:layout_marginBottom="16dp"
        android:background="#F8F5F5"
        android:ems="10"
        android:hint="Enter distance (meter)"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/sec_edit_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/sec_edit_text"
        android:layout_width="210dp"
        android:layout_height="33dp"
        android:background="#F8F5F5"
        android:ems="10"
        android:hint="Enter duration (seconds)"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/meter_edit_text"
        app:layout_constraintStart_toStartOf="@+id/meter_edit_text"
        tools:layout_editor_absoluteY="219dp" />

    <Button
        android:id="@+id/svae_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sec_edit_text" />
</androidx.constraintlayout.widget.ConstraintLayout>